<html t:type="Layout" title="AddRoom"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">    

    <div class="container-fluid">
        <div class="col-sm-4">
            <div class="col-sm-10 col-sm-offset-2">
                <h2>Create new room:</h2>
                <t:beaneditform object="hroom" exclude="id" submitlabel="Create Room" reorder="name, number"/>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="col-sm-10 col-sm-offset-1">
                <h2>Room list:</h2>
                <t:grid t:source="hrooms" exclude="id"/> 
            </div>
        </div>
    </div>

</html>
